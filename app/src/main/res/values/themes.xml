<!--        <item name="strokeColor">@color/error_medium</item>-->
<!--        <item name="cornerRadius">@dimen/border_radius_sm</item>-->
<!--        <item name="fontAndIconColor">@color/light_l5</item>-->
<!--    </style>-->


    <style name="Theme.GenerateMapArts.ProgressBarTheme">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="Theme.GenerateMapArts.FloatingActionButton">
        <item name="colorAccent">@color/white</item>
    </style>

    <!--Text-->
    <style name="Text">
        <item name="android:textColor">@color/dark_d1</item>
    </style>

    <!--Text Display-->
    <style name="Text.ScreenTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_extra_bold</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="Text.GraySubTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/dark_d4</item>
    </style>

    <style name="Text.MiddleScreenInfoText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textColor">@color/dark_d1</item>
    </style>

    <style name="Text.InputLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textColor">@color/dark_d1</item>
    </style>

    <style name="Text.InputText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textColor">@color/dark_d1</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

</resources>