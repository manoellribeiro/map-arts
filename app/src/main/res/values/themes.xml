<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GenerateMapArts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimaryDark">@color/blue</item>
    </style>

    <style name="Theme.GenerateMapArts" parent="Base.Theme.GenerateMapArts" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@color/light_yellow</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <item name="windowSplashScreenAnimatedIcon" >@drawable/ic_logo_splash_screen</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.GenerateMapArts</item>
    </style>

    <!--Button-->
    <style name="MartpButton"/>
    <style name="MartpButton.Primary">
        <item name="type">filled</item>
        <item name="buttonBackgroundColor">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
        <item name="fontAndIconColor">@color/light_l5</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/nunito_italic</item>
        <item name="android:fontFamily">@font/nunito_italic</item>
    </style>
    <style name="MartpButton.Secondary">
        <item name="type">outlined</item>
        <item name="strokeColor">@color/blue</item>
        <item name="buttonBackgroundColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontAndIconColor">@color/blue</item>
    </style>
    <style name="MartpButton.Ghost">
        <item name="type">filled</item>
        <item name="buttonBackgroundColor">@color/light_l5</item>
        <item name="strokeColor">@color/light_l5</item>
        <item name="fontAndIconColor">@color/dark_d1</item>
        <item name="cornerRadius">8dp</item>
    </style>
